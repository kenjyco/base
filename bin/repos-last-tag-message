#!/usr/bin/env bash

path=
[[ -d "$1" ]] && path="$1" && shift

for repo in $(repos-list "$path" | tr '\n' '\0' | xargs -0); do
    cd "$repo"
    tag=$(git tag --sort="-version:refname" | head -n 1)
    if [[ -n "$tag" ]]; then
        echo -e "\n===============\n$repo"
        git tag -n99 $tag
    fi
done | less -rFX
