#!/usr/bin/env bash

[[ -d "$1" && (-d "$1/bin" || -d "$1/Scripts") ]] && env_name=$1 && shift
[[ -z "$env_name" ]] && env_name="venv"
[[ ! -d $env_name ]] && echo "Can't find '$env_name'" && exit 1

rm -rfv "$env_name"
find . \( -name __pycache__ -o -name '.eggs' -o -name '*.egg-info' \ -o -name 'build' -o -name 'dist' \) -print0 |
    xargs -0 rm -rfv
