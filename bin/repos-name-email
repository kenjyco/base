#!/usr/bin/env bash

path=
[[ -d "$1" ]] && path="$1" && shift

for repo in $(repos-list "$path" | tr '\n' '\0' | xargs -0); do
    repo_display=$(echo $repo | clean-path-outputs)
    cd "$repo"
    output=$(perl -ne 'print $1." | " if /name = (.+)/; print $1."\n" if /email = (.+)/;' .git/config)
    echo "$repo_display ($output)"
done
