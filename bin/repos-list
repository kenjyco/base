#!/usr/bin/env bash

path="${1:-.}"
if type realpath &>/dev/null; then
    path="$(realpath ${path%/})"        # remove trailing slash if there
else
    echo -e "\n(realpath command not available, falling back to pwd)\n"
    path="$(pwd)"
fi
test_path="$path"
while [[ ! -s "$test_path/.git" && "$test_path" != "/" ]]; do
    test_path=$(dirname $test_path)
done
if [[ "$test_path" != "/" ]]; then
    echo $test_path
else
    find "$path" -maxdepth 6 -type d -name '.git' -print0 2>/dev/null | sort -z | xargs -0 -I {} dirname {} | less -FX
fi
