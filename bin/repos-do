#!/usr/bin/env bash

_colordiff=cat
which colordiff &>/dev/null
[[ $? -eq 0 ]] && _colordiff=colordiff

for repo in $(repos-list | tr '\n' '\0' | xargs -0); do
    cd "$repo"
    branchname=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)
    echo -e "\n===============\n$repo ($branchname)"
    eval "$@"
done | $_colordiff| less -rFX
